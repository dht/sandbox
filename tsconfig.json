{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist/dts",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["WebWorker", "DOM"],
    "types": ["types-base", "@gdi/types", "@types/jest", "vite/client"],
    "jsx": "react-jsx",
    "baseUrl": "../",
    "paths": {
      "@gdi/ui": ["gdi-ui"],
      "igrid": ["igrid"],
      "igrid-viewer": ["igrid-viewer"],
      "isokit": ["isokit"],
      "platformer": ["platformer"],
      "widgets": ["widgets"]
    }
  }
}
